<UserControl x:Class="WPFWorkshop.Views.EmployeeBoxView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFWorkshop.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding Path=EmployeeViewModel, Source={StaticResource ViewModelLocator}}">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <ListView Margin="10" Name="EmployeesList" ItemsSource="{Binding Path=Employees}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ListView x:Name="ParentPanel" Background="Aqua" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Name: " />
                                <TextBlock Text="{Binding Name, Mode=OneWay}" FontWeight="Bold" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Department: " />
                                <TextBlock Text="{Binding Department, Mode=OneWay}" FontWeight="Bold" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="Role: " />
                                <TextBlock Text="{Binding Title, Mode=OneWay}" FontWeight="Bold" />
                            </StackPanel>
                        </ListView>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>